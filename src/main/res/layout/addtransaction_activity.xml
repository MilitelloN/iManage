<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/rGroupFilterActAddTrans"
        android:layout_width="353dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rGroupDatesActAddTrans">

        <RadioButton
            android:id="@+id/rBttnCat1ActAddTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cat1" />

        <RadioButton
            android:id="@+id/rBttnCat2ActAddTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cat2" />

        <RadioButton
            android:id="@+id/rBttnCat3ActAddTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cat3" />

        <RadioButton
            android:id="@+id/rBttnCat4ActAddTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cat4" />

    </RadioGroup>

    <Spinner
        android:id="@+id/spnnrAccountActAddTrans"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <Button
        android:id="@+id/bttnAddTransactionActAddTrans"
        android:layout_width="167dp"
        android:layout_height="97dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="39dp"
        android:text="Agregar transaccion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="209dp"
        android:text="iManage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/swAccTypeActAddTrans"
        android:layout_width="65dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="13dp"
        android:textOff="Ingreso"
        android:textOn="Debitro"
        app:layout_constraintBottom_toTopOf="@+id/txtQuotaActAddTrans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_desc" />

    <EditText
        android:id="@+id/txt_desc"
        android:layout_width="362dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="26dp"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAmountActAddTrans" />

    <Button
        android:id="@+id/bttnCancelActAddTrans"
        android:layout_width="114dp"
        android:layout_height="76dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="39dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/rGroupDatesActAddTrans"
        android:layout_width="286dp"
        android:layout_height="57dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="105dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtQuotaActAddTrans">

        <RadioButton
            android:id="@+id/rBttnTodayActAddTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoy" />

        <RadioButton
            android:id="@+id/rBttnYestActAddTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayer" />

        <RadioButton
            android:id="@+id/rBttnBfrYestActAddTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anteayer" />

        <RadioButton
            android:id="@+id/rBttnOtherActAddTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otro" />

    </RadioGroup>

    <EditText
        android:id="@+id/txtAmountActAddTrans"
        android:layout_width="364dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="26dp"
        android:ems="10"
        android:hint="Monto"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnnrAccountActAddTrans" />

    <EditText
        android:id="@+id/txtQuotaActAddTrans"
        android:layout_width="364dp"
        android:layout_height="52dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="28dp"
        android:ems="10"
        android:hint="Cuotas"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnnrAccountActAddTrans" />
</androidx.constraintlayout.widget.ConstraintLayout>