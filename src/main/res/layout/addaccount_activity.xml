<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="179dp"
        android:text="iManage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNameAccActAddAcc"
        android:layout_width="365dp"
        android:layout_height="53dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="text"
        android:text="Nombre de la cuenta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/txtDescActAddAcc"
        android:layout_width="371dp"
        android:layout_height="68dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="text"
        android:text="Descripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNameAccActAddAcc" />

    <Switch
        android:id="@+id/swAccTypeActAddAcc"
        android:layout_width="62dp"
        android:layout_height="60dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="14dp"
        android:textOff="Cuenta debito"
        android:textOn="Cuenta credito"
        app:layout_constraintBottom_toTopOf="@+id/txtPrevDateActAddAcc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescActAddAcc" />

    <Button
        android:id="@+id/bttnAddAccountActAddAcc"
        android:layout_width="131dp"
        android:layout_height="74dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="16dp"
        android:text="Agregar cuenta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bttnCancelActAddAcc"
        android:layout_width="117dp"
        android:layout_height="57dp"
        android:layout_marginStart="61dp"
        android:layout_marginBottom="16dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtPrevDateActAddAcc"
        android:layout_width="365dp"
        android:layout_height="48dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:hint="Fecha de cierre anterior"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/txtCurrDateActAddAcc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swAccTypeActAddAcc" />

    <EditText
        android:id="@+id/txtCurrDateActAddAcc"
        android:layout_width="363dp"
        android:layout_height="48dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Fecha de cierre actual"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPrevDateActAddAcc" />

    <EditText
        android:id="@+id/txtNextDateActAddAcc"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="Fecha de cierre siguiente"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCurrDateActAddAcc" />
</androidx.constraintlayout.widget.ConstraintLayout>